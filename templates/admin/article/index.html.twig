{% extends 'admin/base.html.twig' %}

{% block title %}Index!{% endblock %}

{% block body %}
{{ form(form) }}

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Author</th>
      <th>Header</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for article in articles %}
    <tr>
      <td>{{ article.publishedAt|date("m-d-Y") }}</td>
      <td>{{ article.author.email }}</td>
      <td>{{ article.title }}</td>
      <td>{{ article.status }}</td>
      <td>
        <a href="{{ path('admin_article_status-change', {id: article.id}) }}">Edit</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{{ include('includes/_pagination.html.twig', {'pathName' : 'admin_article_index'}) }}
{% endblock %}
